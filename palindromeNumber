public class Solution {
    public bool IsPalindrome(int x) {
       
      string number=x+"";
        string numberR="";

      for(int i=number.Length-1;i>=0;i--){
          
          numberR+=number[i];

      }
        
        if(number.Equals(numberR)){
            return true;
        }
       return false; 
    }
}
